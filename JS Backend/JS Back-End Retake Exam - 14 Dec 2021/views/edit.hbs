{{#with publication}}
  <section id="edit-container">
    <div class="edit-container-info">
      <img src="{{artPicture}}" alt="image" />

      <form action="/edit/{{_id}}" method="POST" class="container-text">
        <h2>Edit</h2>
        <p>Edit your masterpiece!</p>

        <label for="title">Title:</label>
        <input type="text" id="title" name="title" value="{{title}}" />

        <label for="painting-tech">Painting technique:</label>
        <input
          type="text"
          id="painting-tech"
          name="paintingTechnique"
          value="{{paintingTechnique}}"
        />

        <label for="picture">Art picture:</label>
        <input
          type="text"
          id="picture"
          name="artPicture"
          value="{{artPicture}}"
        />

        <label for="certificate">Certificate of authenticity:</label>
        <input
          type="text"
          id="certificate"
          name="certificateOfAuthenticity"
          value="{{certificateOfAuthenticity}}"
        />

        <button class="edit-btn">Edit</button>
      </form>

    </div>
  </section>
{{/with}}